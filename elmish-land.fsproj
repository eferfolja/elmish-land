<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFrameworks>net7.0;net8.0</TargetFrameworks>
        <RootNamespace>ElmishLand</RootNamespace>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <RepositoryUrl>https://github.com/reaptor/elmish-land</RepositoryUrl>
        <PackageProjectUrl>https://github.com/reaptor/elmish-land</PackageProjectUrl>
        <Copyright>Copyright © 2023</Copyright>

        <PackAsTool>true</PackAsTool>
        <ToolCommandName>elmish-land</ToolCommandName>
        <PackageOutputPath>./nupkg</PackageOutputPath>
    </PropertyGroup>

    <ItemGroup>
        <Content Include="src/templates/package.json" CopyToOutputDirectory="Always" />
        <Content Include="src/templates/PROJECT_NAME.fsproj" CopyToOutputDirectory="Always" />
        <Content Include="src/templates/global.json" CopyToOutputDirectory="Always" />
        <Content Include="src/templates/dotnet-tools.json" CopyToOutputDirectory="Always" />
        <Content Include="src/templates/index.html" CopyToOutputDirectory="Always" />
        <Content Include="src/templates/Routes.handlebars" CopyToOutputDirectory="Always" />
        <Content Include="src/templates/Shared.handlebars" CopyToOutputDirectory="Always" />
        <Content Include="src/templates/Page.handlebars" CopyToOutputDirectory="Always" />
        <Content Include="src/templates/App.handlebars" CopyToOutputDirectory="Always" />
        <Compile Include="src/Base.fs"/>
        <Compile Include="src/FsProj.fs"/>
        <Compile Include="src/TemplateEngine.fs" />
        <Compile Include="src/Init.fs"/>
        <Compile Include="src/Server.fs" />
        <Compile Include="src/Build.fs" />
        <Compile Include="src/AddPage.fs"/>
        <Compile Include="src/Program.fs"/>
        <None Include=".config/dotnet-tools.json" Pack="false" />
        <None Include=".github/workflows/dotnet.yml" Pack="false" />
        <None Include=".editorconfig" Pack="false" />
        <None Include=".gitignore" Pack="false"/>
        <None Include="GitVersion.yml" Pack="false"/>
        <None Include="global.json" Pack="false" />
        <None Include="README.md" Pack="true" PackagePath="\" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="GitVersion.MsBuild" Version="5.12.0">
          <PrivateAssets>all</PrivateAssets>
          <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
        <PackageReference Include="Handlebars.Net" Version="2.1.4" />
    </ItemGroup>

</Project>
